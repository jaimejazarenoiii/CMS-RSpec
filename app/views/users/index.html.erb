<table width="100%">
  <thead>
    <th>Name</th>
    <th>Email</th>
    <th>Birthdate</th>
    <th>Mobile</th>
    <th>Avatar</th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to "#{user.fname} #{user.lname}", user_path(user.id) %></td>
        <td><%= user.email %></td>
        <td><%= user.birthdate %></td>
        <td><%= user.mobile %></td>
        <td><%= image_tag user.avatar.url, size: "100" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
