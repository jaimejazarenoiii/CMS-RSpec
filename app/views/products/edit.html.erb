<%= form_for @product do |f| %>
  <%= render 'shared/products_error_messages' %>
  Name: <%= f.text_field :name %>
  Description: <%= f.text_area  :description %>
  Price: <%= f.text_field :price %>
  Category: <%= f.select :category_id do %>
    <% @categories&.each do |category| -%>
      <% if category == @product.category %>
        <%= content_tag(:option, category.name, value: category.id, selected: true) %>
      <% else %>
        <%= content_tag(:option, category.name, value: category.id) %>
      <% end %>
    <% end %>
  <% end %>
  Image: <%= f.file_field :image %>
  <%= f.submit "Update" %>
<% end %>
